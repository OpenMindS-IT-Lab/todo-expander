{
  "$schema": "https://raw.githubusercontent.com/OpenMindS-IT-Lab/todo-expander/main/schema/todoexpand.schema.json",
  "style": "succinct",
  "include": ["ts", "tsx", "js", "jsx", "md"],
  "exclude": ["node_modules", "build", "dist"],
  "sections": ["Context", "Goal", "Steps", "Acceptance"],
  "contextLines": 10,
  "timeout": 30000,
  "concurrency": 1,
  "cache": false,
  "format": true
}
