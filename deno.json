{
  "tasks": {
    "todo:staged": "deno run -A bin/todo-expand.ts --staged",
    "todo:file": "deno run -A bin/todo-expand.ts",
    "build:cli": "deno compile -A --output dist/todo-expand bin/todo-expand.ts",
    "build:npm": "deno run -A scripts/build_npm.ts",
    "pack:npm": "cd npm && npm pack",
    "publish:npm": "cd npm && npm publish",
    "schema:validate": "deno run --allow-read --allow-net scripts/validate-schema.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "githooks:install": "chmod +x .githooks/pre-commit && git config core.hooksPath .githooks",
    "setup:maintenance": "chmod +x run/maintenance_setup.sh && ./run/maintenance_setup.sh",
    "health:check": "deno run -A bin/todo-expand.ts --help && echo 'âœ… Basic functionality verified'",
    "dev:test": "deno run -A bin/todo-expand.ts --print-config",
    "precommit": "deno fmt && deno lint --fix",
    "prepush": "deno fmt && deno lint"
  },
  "fmt": {
    "include": [
      "src/",
      "scripts/"
    ],
    "exclude": [
      "dist/"
    ],
    "indentWidth": 2,
    "lineWidth": 80,
    "proseWrap": "preserve",
    "semiColons": false,
    "singleQuote": true,
    "useTabs": false
  }
}
