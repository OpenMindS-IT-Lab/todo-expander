{
  "tasks": {
    "todo:staged": "deno run -A bin/todo-expand.ts --staged",
    "todo:file": "deno run -A bin/todo-expand.ts",
    "build:cli": "deno compile -A --output dist/todo-expand bin/todo-expand.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "githooks:install": "chmod +x .githooks/pre-commit && git config core.hooksPath .githooks"
  },
  "fmt": {
    "include": ["src/", "scripts/"],
    "exclude": ["dist/"],
    "indentWidth": 2,
    "lineWidth": 80,
    "proseWrap": "preserve",
    "semiColons": false,
    "singleQuote": true,
    "useTabs": false
  }
}
